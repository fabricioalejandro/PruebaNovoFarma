@model Entidades.Persona
@{ 
    List<Entidades.Persona> lista = (List<Entidades.Persona>)ViewBag.lista;
    int i = 1;
}


@{
    ViewBag.Title = "PruebaNovoFarma";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 col-sm-offset-2">
            <div class="register-form">
                <form action="/Home/CreaPersona" method="post">
                    <h3 class="text-left">Nuevo registro Persona</h3>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <input type="text" name="Nombre" class="form-control" placeholder="Nombre" required="required" id="Nombre">
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <input type="text" name="Apellido" class="form-control" placeholder="Apellido" required="required" id="Apellido">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" name="Direccion" class="form-control" placeholder="Direccion" required="required" id="Direccion">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-block btn-lg" tabindex="7" id="guardar">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</br>

<h3>Personas</h3>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>N°</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="tbody1">
            @if (lista.Count > 0)
            {
                foreach (var item in lista)
                {
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @item.Nombre
                        </td>
                        <td>
                            @item.Apellido
                        </td>
                        <td>
                            @item.Direccion
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Editar", "EditaPersona", new { id = item.Id }, new { @class = "editar btn btn-info" })
                            </div>
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Borrar", "EliminaPersona", new { id = @item.Id }, new { @class = "editar btn btn-danger" })
                            </div>
                        </td>
                    </tr>

                    i = i + 1;
                }
            }
            else
            {

            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {

    });
</script>

